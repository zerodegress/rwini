{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/",
    "declarationDir": "./lib/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["**/__test__/**/*", "node_modules/**/*"]
}
